package ${mapping.package};

import cn.org.atool.fluent.mybatis.annotation.FieldMeta;

import java.util.HashMap;
import java.util.HashSet;
import java.util.Map;
import java.util.Set;

/**
 * @ClassName ${mapping.name}
 * @Description ${table}映射定义
 *
 * @author ${author}
 */
public interface ${mapping.name} {
    /**
     * 表名称
     */
    String Table_Name = "${table}";
    /**
    * 实体名称
    */
    String Entity_NAME = "${entity.name}";

#foreach($field in ${fields})
    /**
     * ${field.name}字段映射
     * <p>${field.comment}</p>
     */
    FieldMeta ${field.name} = new FieldMeta("${field.name}", "${field.columnName}");
#end

    /**
     * 实例属性和数据库字段对应表
     */
    Map<String, String> Property2Column = new HashMap<String,String>(){
        {
#foreach($field in ${fields})
            this.put(${field.name}.name, ${field.name}.column);
#end
        }
    };

    /**
     * 数据库所有字段列表
     */
    Set<String> ALL_COLUMNS = new HashSet<String>() {
        {
#foreach($field in ${fields})
            this.add(${field.name}.column);
#end
        }
    };
}